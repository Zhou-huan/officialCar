            @cancel="cancelTime"
            />
            <datetime-picker
            v-if="showTimeIn"
            v-model="currentDate"
            type="datetime"
            title="选择预计归队时间"
            :min-date="minDateIn"
            :max-date="maxDate"
            @confirm="confirmTimeIn"
            @cancel="cancelTime"
            />
      </action-sheet>
      <!-- 用车类型 -->
      <!-- <div class="form-box">
        <div class="title"><img src="@/assets/images/applay_zhonglei.png" alt=""> 用车种类</div>
        <cell-group>
