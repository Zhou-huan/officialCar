           <field v-model="form.apply_bz" placeholder="请输入备注" v-validate="'required'" data-vv-as="用车人数" :name="'apply_bz'"/>
           <span v-show="errors2.has('apply_bz')" class="help is-error">{{errors2.first('apply_bz')}}</span>
